<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
      
    <tbody>
      <% @lists.each do |list| %>
      <tr>
        <th><%= list.title %></th>
        <th><%= list.body %></th>
        <th><%= link_to "Show", list_path(list.id) %></th>
        <th><%= link_to "Edit", edit_list_path(list.id) %></th>
        <th><%= link_to "Destroy", destroy_list_path(list.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></th>
      </tr>
      <% end %>
    </tbody>
  </table>












